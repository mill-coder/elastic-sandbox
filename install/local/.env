# elastic-lab — Local development environment variables
# Used with: podman compose -f install/compose.yaml --env-file install/local/.env up -d

# Elastic Stack version
ELASTIC_VERSION=8.19.10

# Cluster name
CLUSTER_NAME=elastic-local

# Elasticsearch
ES_PORT=9200
ES_HEAP_SIZE=512m
ELASTIC_PASSWORD=changeme

# Kibana
KIBANA_PORT=5601
KIBANA_SYSTEM_PASSWORD=changeme
KIBANA_ENCRYPTION_KEY=a]X3k9Lp2mN7qR5sT1uV8wY0zB4cD6eF

# Deploy local-only definitions (sample users)
DEPLOY_SAMPLE_USERS=true

# Start trial license (enables webhook connectors, ML, etc.)
START_TRIAL_LICENSE=true

# Logstash (opt-in: use --profile logstash)
LOGSTASH_HEAP_SIZE=256m
LOGSTASH_ES_HOSTS=http://elasticsearch:9200
LOGSTASH_ES_USER=logstash
LOGSTASH_ES_PASSWORD=password

# Remote ES import (optional — used by es_import pipelines)
# REMOTE_ES_HOSTS=https://remote-es.example.com:9200
# REMOTE_ES_USER=my_user
# REMOTE_ES_PASSWORD=my_password

# Elastic Agent — Logstash observability (started with --profile logstash)
ELASTIC_AGENT_ES_HOST=http://elasticsearch:9200
ELASTIC_AGENT_ES_USER=logstash-monitoring-agent
ELASTIC_AGENT_ES_PASSWORD=password

# Logstash Pipeline Health Checker (started with --profile logstash)
PIPELINE_HEALTH_ES_URL=http://elasticsearch:9200
PIPELINE_HEALTH_LOGSTASH_URL=http://logstash:9600
PIPELINE_HEALTH_CHECK_INTERVAL=10

# Mattermost (opt-in: use --profile mattermost)
MM_VERSION=10.4
MM_PORT=8065
MM_SITE_URL=http://localhost:8065
MM_INTERNAL_URL=http://mattermost:8065
MM_DB_USER=mmuser
MM_DB_PASSWORD=mmpassword
MM_DB_NAME=mattermost
MM_ADMIN_USER=admin
MM_ADMIN_PASSWORD=Admin123!
MM_ADMIN_EMAIL=admin@example.com
MM_DEFAULT_USER_PASSWORD=password
